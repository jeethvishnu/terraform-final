pipeline {
    agent {
        label 'agent-2'
    }

    options {
        timeout(time: 15, unit: 'MINUTES')
        disableConcurrentBuilds()
        ansiColor('xterm')
    }

    stages {
        stage('init') {
            steps {
                sh """
                    cd expense-infra-dev
                    cd 01-vpc
                    terraform init -reconfigure
                """
            }
        }

        stage('test') {
            steps {
                 sh """
                    cd expense-infra-dev
                    cd 01-vpc
                    terraform plan
                """
            }
        }

        stage('deploy') {
              input {
                message "Should we continue?"
                ok "Yes, we should."
            }
            steps {
                 sh """
                    cd expense-infra-dev
                    cd 01-vpc
                    terraform apply -auto-approve
                """
            }
        }
    }

    post {
        always {
            echo 'I will always say Hello again!'
            deleteDir()
        }
        success {
            echo 'will run if it is success'
        }
        failure {
            echo 'will run when it is failed'
        }
    }
}