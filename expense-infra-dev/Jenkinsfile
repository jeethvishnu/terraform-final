pipeline {
    agent {
        label 'agent-2'
    }

    options {
        timeout(time: 5, unit: 'MINUTES')
        disableConcurrentBuilds()
    }

    stages {
        stage('init') {
            steps {
                sh """
                    cd expense-infra-dev
                    cd 01-vpc
                    terraform init -reconfigure
                """
            }
        }

        stage('test') {
            steps {
                sh 'echo testing'
            }
        }

        stage('deploy') {
            steps {
                sh 'echo deploying'
            }
        }
    }

    post {
        always {
            echo 'I will always say Hello again!'
        }
        success {
            echo 'will run if it is success'
        }
        failure {
            echo 'will run when it is failed'
        }
    }
}